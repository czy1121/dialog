<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ================================================================================ -->
    <!--  TooSimple.ActionSheet  -->
    <style name="Theme.TooSimple.ActionSheet" parent="Theme.TooSimple.CustomDialog">
        <item name="android:listViewStyle">@style/TooSimple.ActionSheet.ListViewStyle</item>
        <item name="android:buttonStyle">@style/TooSimple.ActionSheet.ButtonStyle</item>
        <item name="android:divider">@drawable/toosimple_actionsheet_divider</item>
        <item name="dialogPreferredPadding">0dp</item>
    </style>

    <style name="TooSimple.ActionSheet.ListViewStyle" parent="Widget.AppCompat.ListView">
        <item name="android:background">@drawable/toosimple_actionsheet_background_bottom</item>
        <item name="android:divider">@drawable/toosimple_actionsheet_list_divider</item>
        <item name="android:dividerHeight">1px</item>
    </style>
    <style name="TooSimple.ActionSheet.ButtonStyle" parent="">
        <item name="android:textAppearance">?android:attr/textAppearanceListItemSmall</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <!-- ================================================================================ -->
    <!--  TooSimple.ActionSheetIos  -->
    <style name="Theme.TooSimple.ActionSheetIos" parent="Theme.TooSimple.CustomDialog">
        <item name="android:listViewStyle">@style/TooSimple.ActionSheetIos.ListViewStyle</item>
        <item name="android:buttonStyle">@style/TooSimple.ActionSheetIos.ButtonStyle</item>
        <item name="android:divider">@null</item>
        <item name="dialogPreferredPadding">20dp</item>
        <item name="dialogCornerRadius">8dp</item>
    </style>

    <style name="TooSimple.ActionSheetIos.ListViewStyle" parent="Widget.AppCompat.ListView">
        <item name="android:background">@drawable/toosimple_actionsheet_background</item>
        <item name="android:divider">@drawable/toosimple_actionsheet_list_divider</item>
        <item name="android:dividerHeight">1px</item>
    </style>
    <style name="TooSimple.ActionSheetIos.ButtonStyle" parent="">
        <item name="android:background">@drawable/toosimple_actionsheet_background</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceListItemSmall</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

</resources>