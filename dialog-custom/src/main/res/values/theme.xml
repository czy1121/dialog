<?xml version="1.0" encoding="utf-8"?>
<resources>


    <attr name="customDialogTheme" format="reference" />


    <!-- ================================================================================ -->
    <style name="Theme.TooSimple.CustomDialog" parent="Theme.AppCompat.Light.Dialog">


        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">false</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:windowActionModeOverlay">true</item>

        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowAnimationStyle">@null</item>

        <!-- 对话框背景 -->
        <item name="android:windowBackground">@null</item>
        <item name="android:background">@null</item>
        <item name="android:colorBackground">@null</item>

        <item name="dialogCornerRadius">10dp</item>

        <!-- 列表项：内边距，高度，文本样式 -->
        <item name="listPreferredItemPaddingLeft">20dip</item>
        <item name="listPreferredItemPaddingRight">20dip</item>
        <item name="listPreferredItemHeightSmall">48dp</item>
        <item name="textAppearanceListItemSmall">@style/TextAppearance.AppCompat.Subhead</item>
    </style>
</resources>